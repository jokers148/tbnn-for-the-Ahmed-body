FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      flowFields;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
fieldAverage
{
    type               fieldAverage;
    libs ("libfieldFunctionObjects.so");
    writeControl      writeTime;
    resetOnRestart     false;
    resetOnOutput      false;
    timeStart          3;

    fields
    (
        nut
        {   
            mean        on;
            prime2Mean  off;
            base        time;
        }	

        vorticity
        {
            mean        on;
            prime2Mean  off;
            base        time;
        }

        p
        {
            mean        on;
            prime2Mean  off;
            base        time;
        }



        U
        {
            mean        on;
            prime2Mean  on;
            base        time;
        }
        wallShearStress
        {
            mean        on;
            prime2Mean  off;
            base        time;
        }
	yPlus
        {
            mean        on;
            prime2Mean  off;
            base        time;
        }

    );
}




